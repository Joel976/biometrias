# ====================================
# CONFIGURACIÓN DEL SERVIDOR BACKEND
# ====================================

# Puerto del servidor
PORT=3000

# Entorno (development, production)
NODE_ENV=development

# ====================================
# CONFIGURACIÓN DE BASE DE DATOS
# ====================================

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=biometrics_db

# ====================================
# CONFIGURACIÓN DE SEGURIDAD
# ====================================

# Secreto para JWT
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# Secreto para Refresh Token
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here_change_in_production

# CORS
CORS_ORIGIN=*

# ====================================
# CONFIGURACIÓN DE LIBRERÍAS BIOMÉTRICAS
# ====================================

# Microsoft Azure Speaker Recognition (opcional)
AZURE_SPEECH_KEY=your_azure_key_here
AZURE_SPEECH_REGION=eastus

# OpenAI para procesamiento de voz (opcional)
OPENAI_API_KEY=your_openai_key_here

# ====================================
# CONFIGURACIÓN DE SINCRONIZACIÓN
# ====================================

# Intervalo de reintentos (en segundos)
SYNC_RETRY_INTERVAL=300

# Máximo número de reintentos
MAX_SYNC_RETRIES=5

# Timeout para operaciones de sync (en ms)
SYNC_TIMEOUT=30000

# ====================================
# CONFIGURACIÓN DE LOGS
# ====================================

# Nivel de log (error, warn, info, debug)
LOG_LEVEL=info

# Ruta de archivo de logs
LOG_FILE=./logs/app.log

# ====================================
# CONFIGURACIÓN DE PERFORMANCE
# ====================================

# Máximo de conexiones simultáneas a BD
DB_POOL_MAX=20
DB_POOL_MIN=5

# Timeout de conexión BD (ms)
DB_POOL_TIMEOUT=30000
